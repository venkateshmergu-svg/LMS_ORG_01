# NPM Configuration for LMS Frontend
# Ensures deterministic, reproducible builds

# Use exact versions by default
save-exact=true

# Enforce lockfile integrity
package-lock=true

# Fail if lockfile needs update
# (enforced via npm ci in CI/CD)

# Engine strictness
engine-strict=true

# Audit on install (security)
audit=true

# Do not allow installation of packages with known vulnerabilities
audit-level=high
