# ============================================================
# LOCAL DEVELOPMENT ENVIRONMENT
# ============================================================
# Copy this file to .env.local for local development
# .env.local is gitignored and will not be committed
# ============================================================

# API Configuration
VITE_API_BASE_URL=http://localhost:8000

# Authentication
VITE_OAUTH_CLIENT_ID=local-dev-client-id
VITE_OAUTH_AUTHORITY=http://localhost:8000
VITE_OAUTH_REDIRECT_URI=http://localhost:5173/auth/callback
VITE_OAUTH_POST_LOGOUT_REDIRECT_URI=http://localhost:5173

# Feature Flags (enable for local testing)
VITE_FEATURE_CALENDAR_SYNC=true
VITE_FEATURE_HRIS_INTEGRATION=true
VITE_FEATURE_PAYROLL_EXPORT=true
VITE_FEATURE_ADVANCED_REPORTS=true

# Application
VITE_APP_NAME=LMS (Local Dev)
VITE_SUPPORT_EMAIL=dev@localhost
